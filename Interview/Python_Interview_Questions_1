# 9. write a program to find the string in file[through file opening]

import re

#f = open('a.txt','r')
#str = f.read()
str = "Going to HC company"

n = re.search("HCL",str,re.I)
if n != None:
    print("Strings are matched")
else:
    print("Strings not matched")



# 10. Remove duplicate characters in string and print it

string = "abcdbbbaacc"
s = ''
for i in string:
    if i not in s:
        s += i

print(s)

string = "abcdbbbaacc"
print(set(string))


# 11. Reverse the given string

a='hello'
print(a[::-1])

s =""
for i in range(len(a)-1,-1,-1):
    s += a[i]

print(s)

txt = "helloworld"[::-1]
print(txt)


b = "Hello"
i = ''
for j in b:
    i = j + i
    #print(i)

print(i)


# Reverse a string using python recursion

def rev(s):
    if len(s) == 0:
        return s
    else:
        return rev(s[1:])+s[0]


print(rev("SAI KUMAR"))


s = "HelloWorld"
print("".join(reversed(s)))


# 12. print list in descending order

a=[1,6,9,4,5,2]

a.sort(reverse=True)
print(a)


a=[1,2,3,4,5,6]
b=a
for i in range(len(a)-1):
    for j in range(len(b)-1):
        if b[j]<b[j+1]:
            temp=b[j]
            b[j]=b[j+1]
            b[j+1]=temp
print(b)


a = [10,9,30,4,5,6]
b = []

while a:
    min = a[0]
    for x in a :
        if x < min:
            min = x

    b.append(min)
    a.remove(min)


# 13. Print Second largest number in List

