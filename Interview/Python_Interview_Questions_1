# 15. Palindrome Program

s='madam'

if s == s[::-1]:
    print("Palindorme")
else:
    print("not palindrome")


# 16. Factorial number program

n = 5
f = 1

for i in range(n,1,-1):
    f = f*i
    #print(f,i)

print(f)


# #count no of repeated elements in a string

f = "1122345555"
n = 0
s = {}
for i in f:
    if i in s:
        s[i] += 1
    else:
        s[i] = 1

print(s)

import collections

d = collections.defaultdict(int)
for c in f:
    d[c] += 1

print(d)

for c in sorted(d, key=d.get, reverse=True):
  print('%s %6d' % (c, d[c]))


#first reverse the word and reverse the alternate word

"""
['aidni', 'ni', 'akatanarak', 'ni', 'erolgnab', 'ni', 'gnikrow', 'ma', 'i']
india ni karanataka ni banglore ni working ma i

"""

a = "i am working in banglore in karanataka in india"

a =a[::-1]
print(a)
b = a.split(" ")
print(b)
c = []
for i in range(len(b)):
    if i%2 == 0:
        c.append(b[i][::-1])
    else:
        c.append(b[i])
print(c)


# #write a program to collect strings if first and last character is same

i  = ["abc","xyx","abca","cdgff","daassd","sai"]

for j in i:
    if j[0] == j[-1]:
        print(j)

# sort elements in list based on second index of sublist tuple
a = [(2, 4), (1, 2), (3, 0), (4, 3)]
for i in range(len(a)):
    print("First loop -->",i)
    for i in range(len(a) - 1):
        print("second loop -->",i)
        if a[i][1] > a[i + 1][1]:
            a[i],a[i+1] = a[i+1],a[i]
            print(a)

print(a)

